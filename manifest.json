{
  "manifest_version": 2,
  "name": "LGTM",
  "version": "0.0.0",
  "permissions": [
    "https://lgtm.fun/*",
    "webRequest",
    "tabs",
    "cookies"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "popup.js"
    ]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["content.js"],
    "run_at": "document_start"
  }]
}
